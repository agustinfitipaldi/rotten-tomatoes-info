{
  "manifest_version": 3,
  "name": "Movie Ratings Enhancer",
  "version": "1.0",
  "description": "Adds Rotten Tomatoes scores under movie posters",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://rt-scraper.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://nzbgeek.info/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 